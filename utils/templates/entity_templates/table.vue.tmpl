<template>
  <div class="p-4">
    <USkeleton v-if="loading" class="h-96" />
    
    <UAlert v-else-if="error" :description="error" color="error" variant="soft" />
    
    <div v-else>
      <div class="flex items-center gap-2 p-2 mb-4">
        <UInput
          v-model="search"
          icon="i-heroicons-magnifying-glass"
          placeholder="Search {{.PluralName | toLower}}..."
          size="sm"
          class="max-w-sm"
        />
      </div>
      
      <UTable :data="{{.StructName | toLower}}s" :columns="columns" />
    </div>
  </div>
</template>

<script setup lang="ts">
import type { {{.StructName}} } from '../stores/{{.StructName | toLower}}'
import { ref, h, resolveComponent } from 'vue'
import type { TableColumn } from '@nuxt/ui'

interface Props {
  {{.StructName | toLower}}s: {{.StructName}}[]
  loading?: boolean
  error?: string | null
}

const props = withDefaults(defineProps<Props>(), {
  loading: false,
  error: null
})

const emit = defineEmits<{
  (e: 'edit', {{.StructName | toLower}}: {{.StructName}}): void
  (e: 'delete', {{.StructName | toLower}}: {{.StructName}}): void
}>()

const search = ref('')

const columns: TableColumn<{{.StructName}}>[] = [
  {
    key: 'id',
    label: 'ID',
    sortable: true
  },
  {{range .Fields}}
  {
    key: '{{.JSONName}}',
    label: '{{.JSONName | toPascal}}',
    sortable: true
  },
  {{end}}
  {
    key: 'createdAt',
    label: 'Created',
    sortable: true
  },
  {
    key: 'actions',
    label: 'Actions',
    sortable: false,
    class: 'w-24',
    header: () => h('div', { class: 'text-right' }, 'Actions'),
    cell: ({ row }) => h('div', { class: 'flex justify-end gap-2' }, [
      h(resolveComponent('UButton'), {
        color: 'primary',
        variant: 'ghost',
        icon: 'i-heroicons-eye',
        size: 'xs',
        onClick: () => navigateTo(`/{{.PluralName | toLower}}/${row.id}`)
      }),
      h(resolveComponent('UButton'), {
        color: 'primary',
        variant: 'ghost',
        icon: 'i-heroicons-pencil-square',
        size: 'xs',
        onClick: () => emit('edit', row)
      }),
      h(resolveComponent('UButton'), {
        color: 'red',
        variant: 'ghost',
        icon: 'i-heroicons-trash',
        size: 'xs',
        onClick: () => emit('delete', row)
      })
    ])
  }
]
</script>
